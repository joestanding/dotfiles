[colors]
background = #783e57
foreground = #E4CDC1
underline = #ba7892

background-alt = #000
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/example]
bottom = true
width = 100%
height = 30
offset-x = 1%
fixed-center = true
underline-size = 4
background = #00ff0000
foreground = #d3d3d3
line-size = 3
line-color = #f00
border-size = 0
offset-y = -100
padding-left = 2
padding-right = 2
margin-top = 50
module-margin-right = 2
font-0 = xos4 Terminess Powerline:size=12:weight=bold
font-1 = FontAwesome:size=8
modules-center = i3 username cpu memory filesystem battery debian-updates arch-updates eth weather date
tray-position = right
tray-padding = 2
tray-background = #0063ff
wm-restack = i3
cursor-click = pointer
cursor-scroll = ns-resize

