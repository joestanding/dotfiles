[module/date]
format-background = #783e57
format-foreground = #E4CDC1
format-underline = #ba7892
format-prefix = " "
format-padding = 2
;margin-left = 10
type = internal/date
interval = 1
date = "%A %d %B %Y"
date-alt = " %Y-%m-%d"
time = %I:%M:%S %p
time-alt = %I:%M:%S
format-prefix-foreground = #E4CDC1
;format-underline = #0a6cf5
label = %date% %time%

