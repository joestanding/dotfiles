[colors]
background          = #020C0D
foreground          = #E0E0E0
icon                = #999999
underline           = ${colors.icon}

primary             = #ffb52a
secondary           = #e60053
alert               = #bd2c40

[bar/mint]
background          = ${colors.background}
foreground          = ${colors.foreground}

font-0              = xos4 Terminus:size=12
font-1              = FontAwesome:size=8;1
font-2              = FontAwesome:size=8;-2
font-3              = NotoSans-Regular:size=8;-1
font-4              = MaterialIcons:size=10;-1
font-5              = Termsynu:size=8:antialias=false;0

bottom              = false
underline-size      = 0
overline-size       = 0

fixed-center        = true

width               = 100%
height              = 33

module-margin-right = 3

modules-left        = i3
modules-right       = eth0 eth1 tap0 extip cpu-bar memory-bar filesystem battery-bar date

wm-restack          = i3

cursor-click        = pointer
cursor-scroll       = ns-resize

padding-left        = 5
padding-right       = 5

#border-size        = 10 ; Set this if you want some spacing around the bar.

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[settings]
screenchange-reload = true

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[global/wm]
margin-top          = 5
margin-bottom       = 5

[module/i3]
format-background = ${colors.background}
format-foreground = ${colors.foreground}
format-underline = ${colors.underline}
format-overline     = ${colors.underline}

type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused =  %name% 
label-focused-background = ${colors.icon}
label-focused-foreground = ${colors.background}
;label-focused-underline = ${colors.icon}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-padding = 1
label-unfocused-background = ${colors.background}

; visible = Active workspace on unfocused monitor
label-visible = %name%
;label-visible-background = ${self.label-focused-background}
;label-visible-underline = ${self.label-focused-underline}
label-visible-padding = 1

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-padding = 1

