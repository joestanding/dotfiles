[module/date]
format-background = ${colors.background}
format-foreground = ${colors.icon}
format-underline = ${colors.underline}
format-overline     = ${colors.underline}
format-prefix = " "
format-prefix-foreground = ${colors.foreground}
format-padding = 0
type = internal/date
interval = 1
date-alt = "%A %d %B %Y"
date = " %Y-%m-%d"
time-alt = %I:%M:%S %p
time = %H:%M:%S
label = %date% %time%

