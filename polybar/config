format-background = #783E57
format-foreground = #E4CDC1
format-underline = #BA7892
format-padding = 2
exec = ~/.config/polybar/username

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/debian-updates]
type = custom/script
interval = 60
format = <label>
format-prefix = " "
format-background = #783E57
format-foreground = #E4CDC1
format-underline = #BA7892
format-padding = 2
exec = ~/.config/polybar/debian-updates
exec-if = "grep -q 'Kali' /etc/lsb-release"

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

