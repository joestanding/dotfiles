[module/weather]
type = custom/script
interval = 10
format = <label>
format-prefix = " "
format-background = #783E57
format-foreground = #E4CDC1
format-underline = #BA7892
format-padding = 2
exec = python2 ~/.config/polybar/weather

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

